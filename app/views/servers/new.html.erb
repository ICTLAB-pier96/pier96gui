<%= form_for :server, url: servers_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :host %><br>
    <%= f.text_area :host %>
  </p>
 
   <p>
    <%= f.label :user %><br>
    <%= f.text_area :user %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
     <%= f.submit "Save", class: "blue darken-3 btn" %>
  </p>
<% end %>
