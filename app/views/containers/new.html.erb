
<%= javascript_tag "$(document).ready(function() {
      $('select').material_select();
  });"
%>
<%= form_for :container, url: containers_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <div class="input-field col s12">
    <%= f.label :server_id %><br>
    <%= f.select("server_id", servers_select_collect, { include_blank: false }) %>
  </div>

  <div class="input-field col s12">
    <%= f.label :image_id %><br>
    <%= f.select("image_id", images_select_collect, { include_blank: false }) %>
  </div>
  <p>
    <%= f.label :command %><br>
    <%= f.text_area :command %>
  </p>
  <p>
    <%= f.label :local_port %><br>
    <%= f.text_area :local_port %>
  </p>
  <p>
    <%= f.label :host_port %><br>
    <%= f.text_area :host_port %>
  </p>
  <p>
    <%= f.label :custom_arguments %><br>
    <%= f.text_area :custom_arguments %>
  </p>

  <p>
    <%= f.submit "Save", class: "blue darken-3 btn" %>
  </p>
<% end %>