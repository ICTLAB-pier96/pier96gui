<h1>Listing Containers</h1>
<%= link_to 'Add container', new_container_path , class: "blue darken-3 btn"%>
<br>
<table class="striped">
  <tr>
    <th>Name</th>
    <th>Arguments</th>
    <th>Server</th>
    <th>Image</th>
    <th>Ports : Host Ports</th>
    <th>Status
  </tr>
  

   <% @containers.each do |c| %>
   <% server = get_server(c.server_id) %>
    <tr>
      <td><%= link_to "#{c.name}", container_path(:id => c.id) %></td>
      <td><%= c.args %>
      <td><%= server.name %></td>
      <td><%= c.image %></td>
      <td><%= c.local_port %> : <%= c.host_port %></td>
      <td><%= c.state %>
    </tr>
  <% end %>
</table>



